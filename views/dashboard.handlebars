<h2>Create a Post!</h2>
<form class="newBlog">
   <div>
    <label for="postTitle">Post Title:</label>
    <input type="text" id="postTitle" name="postTitle"/>
   </div> 
   <div>
    <textarea name="textInput" id="textInput" cols="100" rows="10" placeholder="Your post goes here!"></textarea>
   </div>
   <div>
    <button id="subBtn" type="submit">Post!</button>
   </div>
</form>

<h2>Your Posts</h2>
<ul class="post-list">
    {{#each post as |post|}}
    <li>
        {{> post-info post}}--- <a href="/dashboard/post/edit/{{id}}">edit post</a><hr>
    </li>
    {{/each}}
</ul>
<script src="/public/js/addPost.js"></script>
<script src="/public/js/login.js"></script>
